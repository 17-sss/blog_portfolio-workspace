{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["./components"],
      "@components/*": ["./components/*"],

      "@compositions": ["./compositions"],
      "@compositions/*": ["./compositions/*"],

      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],

      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],

      "@templates": ["./templates"],
      "@templates/*": ["./templates/*"],

      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
